<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/textDescricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir ao mercado"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="20/10/2022"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/textDescricao"
        app:layout_constraintStart_toStartOf="@+id/textDescricao"
        app:layout_constraintTop_toBottomOf="@+id/textDescricao" />

    <ImageButton
        android:id="@+id/btnExcluir"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:contentDescription="excluir"
        android:minHeight="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_excluir_24"
        tools:layout_editor_absoluteX="326dp" />

    <ImageButton
        android:id="@+id/btnEditar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:contentDescription="editar"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/btnExcluir"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnExcluir"
        app:layout_constraintTop_toBottomOf="@+id/btnExcluir"
        app:srcCompat="@drawable/ic_editar_24" />

</androidx.constraintlayout.widget.ConstraintLayout>